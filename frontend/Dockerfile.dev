# Development Dockerfile
FROM node:18-alpine

WORKDIR /app

# Install dependencies for better watching
RUN apk add --no-cache git

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose development port (Vite default is 5173)
EXPOSE 5173

# Start development server with host flag for Docker
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]