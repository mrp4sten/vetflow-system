POSTGRES_DB=vetflow
POSTGRES_USER=mrp4sten
POSTGRES_PASSWORD=your_secure_password_here

# ====================================
# BACKEND API CONFIGURATION
# ====================================
# JWT Secret (IMPORTANT: Change this in production!)
VETFLO_JWT_SECRET=your-256-bit-secret-key-change-this-in-production-please-use-strong-random-key

# CORS Allowed Origins (comma-separated)
VETFLO_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:80

# ====================================
# FRONTEND CONFIGURATION
# ====================================
# API Base URL for frontend to connect to backend
VITE_API_BASE_URL=http://localhost:8080/api/v1

# Frontend port (external)
FRONTEND_PORT=5173

# Frontend internal port (inside container)
FRONTEND_INTERNAL_PORT=5173

# Dockerfile to use (Dockerfile.dev for development, Dockerfile for production)
FRONTEND_DOCKERFILE=Dockerfile.dev